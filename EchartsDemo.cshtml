    var myChart = echarts.init(document.getElementById('main1'));

    myChart.showLoading({
        text: "努力加载中..."
    });

    $.ajax({
        type: "post",
        async: true,//异步执行
        url: "/EchartDemo/DataInit",
        dataType: "json",//返回数据形式JSON
        data: {},
        success: function (result) {

            var TrainClassNumArray = [];
            for (var i = 0; i < result["data"].length ; i++) {
                TrainClassNumArray.push(result["data"][i]["trainclassnum"]);
            }

            var option = {
                title: {
                },
                tooltip: {},
                toolbox: {
                    feature: {
                        saveAsImage: {}
                    }
                },
                //X轴数据
                xAxis: {
                    data: ["2012年", "2013年", "2014年", "2015年", "2016年"]
                },
                //Y轴数据
                yAxis: {
                },
                visualMap: {
                    //不显示visualMap组件，只用于明暗度的映射
                    show: false,
                    //映射最小值
                    min: 10000,
                    //映射最大值
                    max: 50000,
                    //映射的范围
                    inRange: {
                        colorLightness: [1, 0]
                    }
                },
                //数据源
                series: [
                    {
                        name: '班级数量',
                        type: 'bar',
                        data: TrainClassNumArray,
                        //Style样式个性化设置
                        itemStyle: {
                            normal: {
                                //图形的颜色
                                color: '#c23531',
                                //阴影的设置
                                //shadowBlur: 200,
                                //shadowColor: 'rgba(0, 0, 0, 0.5)'
                            }
                        }
                    }
                ]
            }            
            myChart.hideLoading();
            myChart.setOption(option);
        },
        error: function (errormsg) {
            alert("加载图形失败啦！");
        }
    });
</script>
